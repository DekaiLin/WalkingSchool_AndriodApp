<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/point_top_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Point : "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="30 "
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Total : "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="30 "
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/group_sec"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Group Icon"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/group_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/group_sec"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:onClick="group_1">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/group_1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="point :" />


                    <TextView
                        android:id="@+id/point_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="10" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/group_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/group_1"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:onClick="group_2">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/group_2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="point :" />


                    <TextView
                        android:id="@+id/point_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="10" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/group_3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/group_2"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:onClick="group_3">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/group_3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="point :" />


                    <TextView
                        android:id="@+id/point_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="10" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/group_4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/group_3"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:onClick="group_4">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/group_4" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="point :" />


                    <TextView
                        android:id="@+id/point_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="10" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/group_5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/group_4"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:onClick="group_5">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/group_5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="point :" />


                    <TextView
                        android:id="@+id/point_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="10" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:onClick="changeTheme"
                android:id="@+id/theme_sec"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/group_5"
                android:layout_centerHorizontal="true"
                android:background="@color/amber_50"
                android:gravity="center"
                android:text="Change theme"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>