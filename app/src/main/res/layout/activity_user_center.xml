<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.sfu.Navy.walkinggroup.UserManager.UserCenterActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_user_btn"
        android:text="@string/edit_user_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/monitor_btn"
        android:text="@string/monitor_btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_user_btn"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/request_btn"
        android:text="Pending Requests"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/monitor_btn"
        android:layout_marginTop="40dp"/>



</RelativeLayout>
